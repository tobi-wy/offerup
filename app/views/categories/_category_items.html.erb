<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Items

    <a data-toggle="collapse" href="#category_items_new_form">
      Add item
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @category.items.each do |item| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to item, item %>

        <%= link_to item, method: :delete, data: { confirm: "Do you really want to delete this item" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="category_items_new_form">
        <%= render partial: "categories/category_items_new_form" %>
      </div>
    </div>

  </ul>
</div>
