<%= form_with(model: @message, local: true) do |f| %>

  <%= f.hidden_field :sender_id, value: @user.id %>

  <div class="form-group">
    <%= f.label :recipient_id %>

    <%= f.text_field :recipient_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :text %>

    <%= f.text_field :text, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :item_id %>

    <%= f.collection_select :item_id, Item.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <%= f.submit "Create message", class: "btn btn-block btn-outline-secondary" %>
<% end %>
